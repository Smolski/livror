%\chapter{Apêndices}
% ----------------------------------------------------------

\chapter{Imagens}

\begin{figure}[ht]
  \centering
  \caption{Evolução do PIB brasileiro 2007-2016}
  \centering

<<graf_pib, include=TRUE,echo=FALSE, fig.width=12, fig.height=5, fig.align='center',  warning=FALSE,message=FALSE>>=
require(ggplot2)
require(BETS)
RGS_indx=BETS.get(4192, data.frame=T)
ggplot(RGS_indx, aes(x=date, y=value)) + geom_line()+xlab("\n Ano") + ylab("(R$) Milhões") +
     annotate("rect", xmin = as.Date("2014-01-01", "%Y-%m-%d"), xmax = as.Date("2015-12-01", "%Y-%m-%d"), ymin=-Inf,  ymax=Inf, fill="grey", alpha=0.5)+
    theme(axis.text.x = element_text(size=20),
        axis.text.y = element_text(size=20),  
        axis.title.x = element_text(size=20),
        axis.title.y = element_text(size=20))+
  xlim(as.Date(c("2007-01-01", "2016-12-01"), format="%Y-%m-%d"))
@
   \label{graf_pib}
      \subcaption{Nota: hachurado refere-se ao período deste estudo - janeiro de 2014 a dezembro de 2015.}
   \legend{Fonte: Elaborado a partir de \citeonline{BCB2017}.}
\end{figure}


